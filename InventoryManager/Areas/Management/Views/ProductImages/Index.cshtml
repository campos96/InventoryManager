@model IEnumerable<InventoryManager.Models.ProductImage>

@{
    ViewBag.Title = "Imagenes de productos";
}

<div class="card">
    <div class="card-header">
        <h3>@ViewBag.Title<a href="@Url.Action("Create")" class="btn btn-primary float-end">Crear</a></h3>
    </div>
    <div class="card-body">
        <table class="table table-sm table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.ID)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Product.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FileName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.ServerFileName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.FileType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Hidden)
                    </th>
                    <th>Opciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Product.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FileName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ServerFileName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.FileType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Hidden)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit", null, new { id = item.ID, Area = "Management" })" class="btn btn-warning">Editar</a>
                            <a href="@Url.Action("Details", null, new { id = item.ID, Area = "Management" })" class="btn btn-light">Detalles</a>
                            <a href="@Url.Action("Delete", null, new { id = item.ID, Area = "Management" })" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('table').dataTable();
        });

    </script>
}