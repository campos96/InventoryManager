@model InventoryManager.Models.Product

@{
    ViewBag.Title = "Detalles";
}

<div class="card">
    <div class="card-header">
        <h3>
            @ViewBag.Title
            <a href="@Url.Action("Index")" class="btn btn-light float-end">Regresar al inicio</a>
        </h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <fieldset disabled="">
                @Html.Partial("~/Areas/Management/Views/Products/Form.cshtml")
            </fieldset>
        }
    </div>
</div>
