@model InventoryManager.Models.BinLot

@{
    ViewBag.Title = "Eliminar";
}

<div class="card">
    <div class="card-header">
        <h3>
            @ViewBag.Title
            <a href="@Url.Action("Index")" class="btn btn-light float-end">Regresar al inicio</a>
        </h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <h5>Are you sure you want to delete this?</h5>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <fieldset disabled>
                @Html.Partial("~/Areas/Management/Views/BinLots/Form.cshtml")

            </fieldset>
            <div class="form-group">
                <input type="submit" value="Eliminar" class="btn btn-danger" />
            </div>
        }
    </div>
</div>
