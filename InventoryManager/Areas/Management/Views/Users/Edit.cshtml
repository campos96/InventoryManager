@model InventoryManager.Models.User

@{
    ViewBag.Title = "Editar";
}

<div class="card">
    <div class="card-header">
        <h3>
            @ViewBag.Title
            <a href="@Url.Action("Index")" class="btn btn-light float-end">Regresar al inicio</a>
        </h3>
    </div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.Partial("~/Areas/Management/Views/Users/Form.cshtml")
            <div class="form-group">
                <input type="submit" value="Guardar cambios" class="btn btn-warning" />
            </div>
        }
    </div>
</div>
